<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElectionMobileApp.Views.Registration"
             Title="Registration">
            <ContentPage.Content>
                <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
                    <Label Text="ACTIVATIONS" FontSize="25"
                VerticalOptions="CenterAndExpand" 
               Margin="0,10" HorizontalTextAlignment="Center" FontAttributes="Bold" >
                    </Label>
                    <Image Source="Background.png" HeightRequest="80" ></Image>
                    <Entry x:Name="txtActivationKey"  Placeholder="Enter Activation Key" />
                    <Entry x:Name="txtName" Placeholder="Enter Your Name" />
                    <Entry x:Name="txtContactNumber" Placeholder="Enter Contact Number" />
                    <Entry x:Name="txtCandidateName" Placeholder="Enter Candidate Name" />
                    <Button x:Name="btnActivate" Text="Activate" Clicked="BtnActivate_Clicked"/>
                </StackLayout>
            </ContentPage.Content>
</ContentPage>